<!DOCTYPE module SYSTEM "module.dtd">

<module name="snake_gate_detection" dir="computer_vision">
  <doc>
    <description>ColorFilter</description>
    <define name="SGD_CAMERA" value="front_camera|bottom_camera" description="Video device to use"/>
  </doc>

  <settings>
    <dl_settings>
      <dl_settings NAME="snake_gate_detection">
         <dl_setting var="color_lum_min" min="0" step="1" max="255" shortname="lum_min" />
         <dl_setting var="color_lum_max" min="0" step="1" max="255" shortname="lum_max" />
         <dl_setting var="color_cb_min"  min="0" step="1" max="255" shortname="cb_min" />
         <dl_setting var="color_cb_max"  min="0" step="1" max="255" shortname="cb_max" />
         <dl_setting var="color_cr_min"  min="0" step="1" max="255" shortname="cr_min" />
         <dl_setting var="color_cr_max"  min="0" step="1" max="255" shortname="cr_max" />
      </dl_settings>
    </dl_settings>
  </settings>

  <depends>video_thread</depends>

  <header>
    <file name="snake_gate_detection.h"/>
  </header>

  <init fun="snake_gate_detection_init()"/>
  <periodic fun="snake_gate_detection_periodic()" freq="10" autorun="FALSE" start="snake_gate_detection_start()" stop="snake_gate_detection_stop()"/>
  <makefile target="ap">
    <file name="snake_gate_detection.c"/>
    <file name="lib/vision/gate_detection.c"/>
  </makefile>
</module>

