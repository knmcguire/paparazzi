<!DOCTYPE module SYSTEM "module.dtd">

<module name="relativelocalizationfilter" dir="relativelocalizationfilter">
	<doc>
		<description>
			Relative Localization Filter based on Bluetooth Communication between drones
		</description>
	</doc>
	<header>
		<!-- Main file -->
		<file name="relativelocalizationfilter.h"/>
		<!-- Functions files -->
		<file name="arrayfunctions.h"/>
		<file name="coordinateconversions.h"/>
		<file name="discreteekf.h"/>
		<file name="fmatrix.h"/>
	</header>
	<init fun="relativelocalizationfilter_init()"/>
	<periodic fun="relativelocalizationfilter_periodic()" freq="20" autorun="TRUE"/>
	<makefile>
		<!-- Main file -->
		<file name="relativelocalizationfilter.c"/>
		<!-- Functions files -->
		<file name="arrayfunctions.c"/>
		<file name="coordinateconversions.c"/>
		<file name="discreteekf.c"/>
		<file name="fmatrix.c"/>
	</makefile>
</module>